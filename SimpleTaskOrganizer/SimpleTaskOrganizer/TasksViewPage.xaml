<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
             Title="Your tasks"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SimpleTaskOrganizer.TasksViewPage"
             BackgroundColor="#696969">
    <ContentPage.Content>
        <RelativeLayout>
            <Button 
                x:Name="AddTaskButton" 
                Text="+" CornerRadius="25" FontAttributes="Bold" FontSize="24" TextColor="#2F4F4F" BorderColor="#2F4F4F" BorderWidth="5" BackgroundColor="#D3D3D3"
                HeightRequest="64" WidthRequest="64"
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.05}"
                RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.05}"
                Clicked="AddTaskButton_Clicked">
            </Button>
            <Button 
                x:Name="RemoveTaskButton" 
                Text="-" CornerRadius="25" FontAttributes="Bold" FontSize="24" TextColor="#2F4F4F" BorderColor="#2F4F4F" BorderWidth="5" BackgroundColor="#D3D3D3"
                HeightRequest="64" WidthRequest="64"
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView, ElementName=AddTaskButton, Property=Width, Factor=1, Constant=32}"
                RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.05}"
                Clicked="RemoveTaskButton_Clicked">
            </Button>
            <!--list of tasks-->
            <StackLayout
                RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=AddTaskButton, Property=Height, Factor=1, Constant=100}"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}" 
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.55}"
                Padding="30,0,30,0">
                <ListView
                    x:Name="CurrentTaskList"
                    BackgroundColor="#D3D3D3" SeparatorColor="#2F4F4F" HasUnevenRows="True" ItemSelected="CurrentTaskList_ItemSelected" 
                    VerticalOptions="Fill">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell Height="50">
                                <StackLayout BackgroundColor="{Binding}" Orientation="Vertical">
                                    <Label Text="{Binding _description}" TextColor="#2F4F4F"></Label>
                                    <Label Text="{Binding _prioriyty}"></Label>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>